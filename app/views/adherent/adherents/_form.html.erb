<div class="inputs row-fluid" id="form_adherent" > 

<%= simple_form_for(@adherent,  :html=> {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
 <div class="row-fluid">
      <div class="span12">
 
    <%= f.input :number,  input_html: {class: "span3"}%>
    <%= f.input :name, input_html: {class: "span3"} %>
    <%= f.input :forname, input_html: {class: "span3"} %>
    <%= f.input :birthdate_picker, :label=> 'Date de naissance', 
        
        hint:'au format jj/mm/aaaa',
        input_html: {class: 'span2', date_min:@date_min, date_max:@date_max } ,:required => true, :as=>:date_picker %>
      </div>
      </div>
    

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary span2"  %>
  </div>
<% end %>
 </div>


