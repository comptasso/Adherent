.inputs.row-fluid#transfer
  = simple_form_for([@payment, @reglement], :html=>{class:'form-inline'})  do |f|
    =f.error_notification
    .row-fluid
      .span12
        = f.input :amount, wrapper_html:{class:'span2'}, label_html:{class: 'span4'}, input_html:{class:'span8', value:number_to_currency(@reglement.amount)}, :disabled=>true
        = f.association :adhesion, :collection=>@unpaid_adhesions, :label_method=>:to_s_for_select, :prompt=>'Choisissez une adh√©sion', wrapper_html:{class:'span4'}, label_html:{class: 'span2'}, input_html:{class:'span10'} 
           
    .row-fluid
      .span12
        .form-actions
          = f.button :submit, id: 'new_reglement', class: "btn-primary span2"