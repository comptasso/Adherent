 <div class="inputs">
<%= simple_form_for(@adherent,  :html=> {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

 
    <%= f.input :number,  input_html: {class: "span3"}%>
    <%= f.input :name, input_html: {class: "span3"} %>
    <%= f.input :forname, input_html: {class: "span3"} %>
    <%= f.input :birthdate_picker, :label=> 'Date', wrapper_html:{class:'span3'},
        label_html: {class: 'span4'},
        hint:'au format jj/mm/aaaa',
        input_html: {class: 'span8', date_min:@date_min, date_max:@date_max } ,:required => true, :as=>:date_picker %>

     
      

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary span2"  %>
  </div>
<% end %>
 </div>


